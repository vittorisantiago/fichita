@page "/"
@inject NavigationManager NavigationManager
@layout MainLayout

<title>Home - Apuestas</title>

<head>
   <link href="css/index.css" rel="stylesheet" />
</head>

<div class="welcome">
    <h1 class="nombre">Fichita</h1>
    <h1 class="titulo">La mejor app de apuestas deportivas</h1>
</div>

<div class="info">
    <h2>Aquí podrás divertirte, pasar tiempo, apostar por tus equipos favoritos y lo mejor...</h2>
    <h2 class="ganar-dinero">¡Ganar dinero!</h2>
</div>

<div>
    <p>No esperes más. ¡Hacé clic abajo!</p>
    <button class="btn btn-primary" @onclick="IniciarSesion">Iniciar Sesión</button>
</div>

@code {
    private void IniciarSesion()
    {
        NavigationManager.NavigateTo("/login");
    }
}
